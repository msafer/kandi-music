{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "types": ["node", "mocha", "chai", "hardhat/types"],
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*",
    "test/**/*",
    "contracts/**/*",
    "typechain-types/**/*"
  ]
}